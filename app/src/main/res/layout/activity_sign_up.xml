<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context="com.example.ascom.fristbage.Activites.signUpActivity">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_gravity="center">



        <EditText android:id="@+id/edit_name"
            android:layout_width="300dip"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:textColor="#686464"
            android:inputType="text"
            android:textSize="20sp"

            android:background="@drawable/short_back"
            android:hint="     Enter your Name"

            android:drawableLeft="@mipmap/name"/>


        <EditText android:id="@+id/edit_email"
            android:layout_width="300dip"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:layout_marginTop="20dip"
            android:textColor="@color/colorPrimary"
            android:inputType="textEmailAddress"
            android:background="@drawable/short_back"
            android:textSize="20sp"

            android:hint="     Enter your Email"
            android:drawableLeft="@mipmap/email"/>

        <EditText android:id="@+id/edit_phone"
            android:layout_width="300dip"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:layout_marginTop="20dip"
            android:textColor="@color/colorPrimary"
            android:inputType="phone"
            android:textSize="20sp"

            android:background="@drawable/short_back"
            android:hint="     Enter your Phone"
            android:drawableLeft="@mipmap/phone"/>

        <EditText android:id="@+id/edit_password"
            android:layout_width="300dip"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:layout_marginTop="20dip"
            android:textColor="@color/colorPrimary"
            android:inputType="textPassword"
            android:textSize="20sp"

            android:background="@drawable/short_back"
            android:hint="     Enter your Password"
            android:drawableLeft="@mipmap/pass"/>


        <EditText android:id="@+id/edit_confirmPassword"
            android:layout_width="300dip"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:layout_marginTop="20dip"
            android:textColor="@color/colorPrimary"
            android:inputType="textPassword"
            android:textSize="20sp"

            android:background="@drawable/short_back"
            android:hint="     Confirm your Password"
            android:drawableLeft="@mipmap/pass"/>




        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_signup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/newbutton"
            android:textColor="@color/colorAccent"
           android:layout_marginTop="45dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Create Account"/>

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="7dip"
            android:layout_marginBottom="24dp"
            android:text="Already a member? Login"
            android:gravity="center"

            android:textSize="20sp"/>


    </LinearLayout>


</ScrollView>
